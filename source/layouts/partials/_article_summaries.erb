<article typeof="DCMIType:text schema:Article" resource="<%= data.settings.site.base_url %><%= article.url %>">
	<header>
		<p class="published-date icon"><time datetime="<%= article.date.strftime("%F") %>" property="dcterms:created schema:dateCreated schema:datePublished" ><%= prettify_date_copyright(article.date) %></time></p>
		<h2 property="dcterms:title schema:headline"><%= article.title %></h2>
		<% if article.data.subtitle %>
		<p class="subtitle"><%= article.data.subtitle %></p>
		<% end %>
		<p property="schema:author schema:creator schema:publisher" typeof="schema:person schema:organization" class="author icon"><span property="schema:name"><%= data.settings.author.name %></span></p>
	</header>
	<% if article.data.description %>
	<p property="dcterms:description schema:description"><%= article.data.description %></p>
	<% end %>
	<% if article.data.image %>
	<link property="schema:image" href="<%= url_for article.data.image %>" />
	<object data="<%= url_for article.data.image %>"></object>
	<% end %>
	<p>Continue reading <a href="<%= article.url %>#nav_main"><cite><%= article.title %></cite></a> (could take <%= reading_time(article.body) %>).</p>
	<% if article.tags %>
	<footer>
	<dl>
		<dt>Tagged with</dt>
		<% article.tags.sort{ |a,b| a.to_s.downcase <=> b.to_s.downcase }.each do |tag| %>
			<% if data.tags[tag] %>
				<% if current_page.url == tag_path(tag) %>
			<dd><%= data.tags[tag].name %></dd>
			   <% else %>
			<dd><a href="<%= url_for tag_path(tag) %>"><%= data.tags[tag].name %></a></dd>
				<% end %>
			<% else %>
				<% if current_page.url == tag_path(tag) %>
			<dd><%= tag %></dd>
			   <% else %>
			<dd><%= link_to tag, tag_path(tag) %></dd>
				<% end %>
			<% end %>
	<% end %>
	</dl>
	</footer>
	<% end %>
</article>