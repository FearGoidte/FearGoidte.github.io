<article typeof="DCMIType:text schema:Article" resource="<%= data.settings.site.base_url %><%= article.url %>">
	<header>
		<p class="published-date icon"><time datetime="<%= article.date.strftime("%F") %>" property="dcterms:created schema:dateCreated schema:datePublished" ><%= article.date.strftime("%A ") + ordinal(article.date.strftime("%e")) + article.date.strftime("&#160;%B,&#160;%Y") %></time></p>
		<h2 property="dcterms:title schema:headline"><%= article.title %></h2>
		<% if article.data.subtitle %>
		<p class="subtitle"><%= article.data.subtitle %></p>
		<% end %>
		<p class="author icon"><%= data.settings.author.name %></p>
		<link property="rdfa:copy" href="#ccpattern" />
	</header>
	<% if article.data.description %>
	<p property="dcterms:description schema:description"><%= article.data.description %></p>
	<% end %>
	<% if article.data.image %>
	<object data="<%= url_for article.data.image %>"></object>
	<% end %>
	<p>Continue reading <a href="<%= article.url %>#nav_main"><cite><%= article.title %></cite></a> (could take <%= reading_time(article.body) %>).</p>
	<% if article.tags %>
	<footer>
	<dl>
		<dt>Tagged with</dt>
		<% article.tags.sort{ |a,b| a.to_s.downcase <=> b.to_s.downcase }.each do |tag, articles| %>
			<% if data['tags'][tag.to_sym] %>
				<% if current_page.url == tag_path(tag) %>
			<dd><%= data['tags'][tag.to_sym][:name] %></dd>
			   <% else %>
			<dd><a href="<%= url_for tag_path(tag) %>"><%= data['tags'][tag.to_sym][:name] %></a></dd>
				<% end %>
			<% else %>
				<% if current_page.url == tag_path(tag) %>
			<dd><%= tag %></dd>
			   <% else %>
			<dd><%= link_to tag, tag_path(tag) %></dd>
				<% end %>
			<% end %>
	<% end %>
	</dl>
	</footer>
	<% end %>
</article>